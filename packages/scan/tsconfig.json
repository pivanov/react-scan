{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "paths": {
      "@web-utils/*": [
        "src/core/web/utils/*"
      ],
      "@web-assets/*": [
        "src/core/web/assets/*"
      ],
      "@web-components/*": [
        "src/core/web/components/*"
      ],
      "@web-inspect-element/*": [
        "src/core/web/inspect-element/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
